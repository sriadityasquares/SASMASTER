@model LoginApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    ViewBag.Admin = "active";
    ViewBag.Register = "active";
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row" style="padding-top:50px">
        <div class="col-xs-12 col-sm-12 col-md-12 div">
            <div class="login-box">
                <div class="row" style="padding-top:10px">
                    <div class="col-md-2 col-xs">
                        <h3 align="center" style="margin-bottom:2px">REGISTER</h3>
                        <div class="specialLine col-md-5"></div>
                    </div>
                </div>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row marb15">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-5 required" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "textbox-control col-md-7 col-xs" })
                </div>
                <div class="row marb15">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-5 required" })
                    @Html.PasswordFor(m => m.Password, new { @class = "textbox-control col-md-7 col-xs" })
                </div>
                <div class="row marb15">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "textbox-control col-md-7 col-xs" })
                </div>
                <div class="row marb15">
                    @Html.LabelFor(m => m.Role, new { @class = "col-md-5 required" })
                    @*//@Html.DropDownListFor(m => m.Role,new List("Admin","Client"));*@

                    <select name="Role" id="Role" class="textbox-control col-md-7 col-xs">
                        <option value="Admin">Admin</option>
                        <option value="Client">Client</option>
                        <option value="Agent">Agent</option>
                        <option value="Customer">Customer</option>
                        <option value= "DataEntry">Data Entry</option>
                    </select>

                </div>
                @*<div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                    </div>*@
                <div class="row marb15">
                    <div class="col-md-12 no-pad">
                        <button type="submit" id="submitbtn" value="Register" class="btn btn-default orangebg pull-right"><i class="fa fa-check"></i>register</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(window).load(function () {
        var tempdataval = '@TempData["registermessage"]';
        if (tempdataval != '') {
            if (tempdataval == 'Registration Successful')
                toastr.success(tempdataval);
            else {
                toastr.error(tempdataval);
            }
        }

    });
</script>